{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row justify-content-center">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="col-12 text-center m-4">Connectez-vous</h1>
    <div class="row justify-content-center">
    <label class="col-6 m-2" for="inputEmail">Email</label>
    <input class="col-6" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label class="col-6 m-2" for="inputPassword">Mot de passe</label>
    <input class="col-6" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-primary col-6 m-5" type="submit">
        Connectez-vous
    </button>
    <div class="row justify-content-center">
        <button class="btn btn-lg btn-danger col-6 m-1">
            <a href="{{ path('app_home') }}" style="text-decoration: none; color: white;">Retour</a>
        </button>
    </div>
    </div>
</form>
</div>
{% endblock %}
