{% extends 'base.html.twig' %}

{% block title %}Demandes de candidature{% endblock %}

{% block body %}

<h1>Demandes de candidature</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Candidat</th>
            <th>Offre d'emploi</th>
            <th>Date de soumission</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.userCandidat.email }}</td>
                <td>{{ demande.offreEmploi.name }}</td>
                <td>{{ demande.date | date('Y-m-d H:i:s') }}</td>
                <td>
                    {% if demande.isValided %}
                        Valid√©e
                    {% else %}
                        En attente
                    {% endif %}
                </td>
                <td>
                    {% if not demande.isValided %}
                        <form method="POST" action="{{ path('app_consultant_valider_demande', {'id': demande.id}) }}">
                            <button type="submit">Valider</button>
                        </form>
                        <form method="DELETE" action="{{ path('app_consultant_refuser_demande', {'id': demande.id}) }}">
                            <button type="submit">Refuser</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
    
{% endblock %}


