{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    <h1 class="text-center m-5">Liste des offres d'emploi déposées</h1>

    <table class="table container">
        <thead>
            <tr>
                <th>Nom du poste</th>
                <th>Ville</th>
                <th>Heures Semaine</th>
                <th>Salaire</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr class="text-align-center">
                <td class="text-left align-middle">{{ job_offer.name }}</td>
                <td class="text-left align-middle">{{ job_offer.city }}</td>
                <td class="text-left align-middle">{{ job_offer.schedules }}</td>
                <td class="text-left align-middle">{{ job_offer.salary }}</td>
                <td class="text-left align-middle">{{ job_offer.isPublished ? 'Validé' : 'En attente' }}</td>
                <td>
                <button class="btn btn-primary btn-sm">
                    <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}"style="color: white; text-decoration: none; display: block; width: 100%; height: 100%;">Voir l'annonce</a>
                </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucunes offres de disponibles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div style="display: flex; justify-content: center; align-items: center;">
    <button class="btn btn-warning m-4 justify-content-center">
        <a href="{{ path('app_job_offer_new') }}" style="color: white; text-decoration: none; display: block; width: 100%; height: 100%;">Editer une nouvelle offre</a>
    </button>
    <button class="btn btn-danger m-4 justify-content-center">
        <a href="{{ path('app_recruiter') }}" style="color: white; text-decoration: none; display: block; width: 100%; height: 100%;">Retour</a>
    </div>
{% endblock %}
