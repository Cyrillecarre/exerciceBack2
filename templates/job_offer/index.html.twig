{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    <h1>Liste des offres d'emploi</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom du poste</th>
                <th>Ville</th>
                <th>Heures Semaine</th>
                <th>Salaire</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job_offer in job_offers %}
            <tr>
                <td>{{ job_offer.name }}</td>
                <td>{{ job_offer.city }}</td>
                <td>{{ job_offer.schedules }}</td>
                <td>{{ job_offer.salary }}</td>
                <td>{{ job_offer.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}">Voir l'annonce</a>
                    <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_job_offer_new') }}">Editer une nouvelle offre</a>
{% endblock %}
