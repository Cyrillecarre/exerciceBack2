{% block title %}JobOffer{% endblock %}

{% block body %}
    <h1>JobOffer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ job_offer.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ job_offer.city }}</td>
            </tr>
            <tr>
                <th>Schedules</th>
                <td>{{ job_offer.schedules }}</td>
            </tr>
            <tr>
