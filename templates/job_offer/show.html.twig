{% extends 'base.html.twig' %}

{% block title %}JobOffer{% endblock %}

{% block body %}
<div class="container" style="width: 70%;">
    <h1 class="text-center">Détail de l'offre</h1>

    <table class="table container">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ job_offer.name }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ job_offer.city }}</td>
            </tr>
            <tr>
                <th>Horaires</th>
                <td>{{ job_offer.schedules }} /h</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ job_offer.salary }} €</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ job_offer.isPublished ? 'Validé' : 'En attente' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_job_offer_index') }}" class="btn btn-primary">Retour à la liste</a>

    {{ include('job_offer/_delete_form.html.twig') }}
</div>
{% endblock %}
